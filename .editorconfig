root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf

[*.{js,jsx,json}]
indent_style = space
indent_size = 2

[*.{php}]
indent_style = space
indent_size = 4

[*.{css,sass}]
indent_style = space
indent_size = 2

[*.{html,xml,twig}]
indent_style = space
indent_size = 2